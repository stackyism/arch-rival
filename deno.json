{
  "tasks": {
    "dev": "deno run -A --node-modules-dir=auto --env-file npm:vite",
    "build": "deno run -A --node-modules-dir=auto npm:vite build",
    "server:start": "deno run -A --node-modules-dir --watch ./server/main.ts",
    "serve": "deno task build && deno task server:start"
  },
  "compilerOptions": {
    "types": [
      "react",
      "react-dom",
      "@types/react"
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "deno.ns"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "imports": {
    "@deno/vite-plugin": "npm:@deno/vite-plugin@^1.0.4",
    "@oak/oak": "jsr:@oak/oak@^17.1.4",
    "@std/assert": "jsr:@std/assert@^1.0.11",
    "@turf/area": "npm:@turf/area@^7.2.0",
    "@turf/helpers": "npm:@turf/helpers@^7.2.0",
    "@turf/intersect": "npm:@turf/intersect@^7.2.0",
    "@turf/union": "npm:@turf/union@^7.2.0",
    "@types/geojson": "npm:@types/geojson@^7946.0.16",
    "@types/react": "npm:@types/react@^18.3.18",
    "@vitejs/plugin-react": "npm:@vitejs/plugin-react@^4.3.4",
    "immer": "npm:immer@^10.1.1",
    "mapbox-gl": "npm:mapbox-gl@^3.10.0",
    "react": "npm:react@^18.3.1",
    "react-dom": "npm:react-dom@^18.3.1",
    "react-map-gl": "npm:react-map-gl@^8.0.1",
    "vite": "npm:vite@^5.4.14",
    "zustand": "npm:zustand@^5.0.3"
  }
}
